<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00549E"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/AddPassword"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text="Password"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddName" />

    <EditText
        android:id="@+id/AddEmail"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddName" />

    <EditText
        android:id="@+id/name3"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text="Name"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/AddName"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text="Name"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="104dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/facebook" />

    <EditText
        android:id="@+id/AddPasswordConfirm"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_marginTop="156dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text="Confirm Password"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddName" />

    <TextView
        android:id="@+id/CreateAcount"
        android:layout_width="321dp"
        android:layout_height="32dp"
        android:layout_marginTop="95dp"
        android:background="@color/white"
        android:paddingTop="7dp"
        android:text="ENREGISTRER"
        android:textAlignment="center"
        android:textColor="#00549D"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddPasswordConfirm"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="CreateAcount" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="CreateAcount" />

</androidx.constraintlayout.widget.ConstraintLayout>